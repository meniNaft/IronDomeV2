@model IEnumerable<IronDomeV2.Models.Attacker>

@{
    ViewData["Title"] = "Index";
}

<h2 class="text-danger">Red Team</h2>

<table class="table table-hover mt-3">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Distance)
            </th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="text-danger">
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td class="text-danger">
                    @Html.DisplayFor(modelItem => item.Distance)
                </td>
                <td>
                    <div class="btn-group" role="group" aria-label="Actions">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-pencil"></i> Edit
                        </a>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                            <i class="bi bi-info-circle"></i> Details
                        </a>
                        
                        <a asp-controller="Volleys" asp-action="Create" asp-route-id="@item.Id" class="btn btn-sm btn-primary">
                            <i class="bi bi-trash"></i> Create Volleys
                        </a>
                        <a asp-controller="Volleys" asp-action="Index" asp-route-id="@item.Id" class="btn btn-sm btn-info">
                            <i class="bi bi-info-circle"></i> Volleys
                        </a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Delete
                        </a>
                        
                    </div>
                </td>

            </tr>
        }
    </tbody>
</table>

<a asp-action="Create">
    <button class="btn btn-outline-success">
        Create New
    </button>
</a>